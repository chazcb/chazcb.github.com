env:
    browser: true
    amd: true
globals:
    geturl: false
rules:  # TODO: switch to using `--reset` and merge with http://git.io/vk58Z
    strict: 2
    no-undef: 2
    no-unused-vars: 2
    no-eq-null: 2
    eqeqeq: 2
    no-bitwise: 2
    wrap-iife: [2, 'any']
    no-use-before-define: 1
    no-empty: 2
    no-new: 2
    no-throw-literal: 2
    no-loop-func: 2
    no-inner-declarations: 2
    block-scoped-var: 2

    # Style
    no-irregular-whitespace: 2
    indent: 2
    new-cap: [2, {"capIsNew": false}]
    linebreak-style: 2
    spaced-line-comment: [2, 'always', {'exceptions': ['-', '=', '/']}]
    no-trailing-spaces: 2
    no-extend-native: 2
    no-caller: 2
    quotes: [2, 'single']
    # Use `self` for aliasing `this`
    consistent-this: [1. 'self']

    # Default overrides
    comma-dangle: 0  # TODO [2, 'always-multiline']
    camelcase: [2, {"properties": "never"}]
    no-underscore-dangle: 0
    curly: [1, 'multi']
    yoda: 0
    key-spacing: 2
    no-multi-spaces: [2, { exceptions: { "Property": false } }]
    consistent-return: 0
    no-shadow: 1
    no-shadow-restricted-names: 2
    dot-notation: 2

    # Moar Pedantic
    no-constant-condition: 2
    no-debugger: 2
    no-dupe-keys: 2
    no-extra-boolean-cast: 1
    no-extra-semi: 2
    no-func-assign: 2
    no-negated-in-lhs: 2
    no-obj-calls: 2
    no-sparse-arrays: 2
    no-unreachable: 2
    use-isnan: 2
    default-case: 1  # Warns when a switch statement has no default case
    guard-for-in: 1
    no-alert: 1
    no-empty-label: 2
    no-eval: 2
    no-fallthrough: 1  # Warns when a non-empty switch case falls through
    no-implied-eval: 2
    no-labels: 2
    no-iterator: 1
    no-lone-blocks: 2
    no-loop-func: 2
    no-multi-str: 2
    no-new-func: 2
    no-octal: 2
    no-proto: 2
    no-redeclare: 2
    no-return-assign: 1
    no-self-compare: 2
    no-sequences: 2
    no-unused-expressions: 2
    no-with: 2
    radix: 2
    no-catch-shadow: 2
    no-delete-var: 2
    comma-spacing: 2
    comma-style: 2
    no-unneeded-ternary: 2
    no-nested-ternary: 2
    no-lonely-if: 2
